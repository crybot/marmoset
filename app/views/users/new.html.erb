<h1> Signup Page </h1>

<div class="row">
<div class="col-md-6 col-md-offset-3">
  <%= form_for @user, :html => {:class => "form-horizontal center"}  do |f| %>

    <%= render 'shared/error_messages' %>

    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "Fisrt name" %>
    </div>

    <div class="form-group">
      <%= f.text_field :surname, class: "form-control", placeholder: "Last name"%>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "Email"%>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "Password"%>
    </div>

    <%= f.submit "Create my account", class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
</div>
