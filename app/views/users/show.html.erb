<h1> Welcome <%= current_user.name %> ! </h1>

<%= link_to new_classroom_path, title: "New Classroom", class: "btn btn-lg btn-primary", id: "newClass" do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
<% end %>

<%= link_to classrooms_path, title: "Join Classroom", class: "btn btn-lg btn-primary", id: "newClass" do %>
  <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
<% end %>

<div class="row">
<% current_user.classrooms.each do |class_room| %>
  <%= link_to "#", title: "link", class: "class center btn btn-lg btn-primary" do %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 
    <br>
    <br>
    <%= class_room.name %>
  <% end %>
<% end %>
</div>

