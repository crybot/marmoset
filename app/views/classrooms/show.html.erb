<h1> <%= @classroom.name %> </h1>

<div class="row">
  <% @classroom.documents.each do |doc| %>
    <%= link_to doc, title: "Show document", class: "class center btn btn-lg btn-primary" do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 
      <br>
      <br>
      <%= doc.name %>
    <% end %>
  <% end %>
</div>

