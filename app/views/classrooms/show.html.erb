<h1> <%= @classroom.name %> </h1>

<%= link_to new_document_path, title: "New document", class: "btn btn-lg btn-success" do %>
  New document
<% end %>

<div class="row">
  <% @classroom.documents.each do |doc| %>
    <%= link_to doc, title: "Show document", class: "class center btn btn-lg btn-info" do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 
      <br>
      <br>
      <%= doc.name %>
    <% end %>
  <% end %>
</div>

